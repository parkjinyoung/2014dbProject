<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecommandMenuFragment" >

    
    <RadioGroup
        android:id="@+id/search_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rd1_snumenu"
        android:orientation="vertical" >

        <RadioButton
            android:id="@id/rd1_snumenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스누메뉴에서 검색" />

        <RadioButton
            android:id="@+id/rd2_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배달음식에서 검색" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.8" >

            <EditText
                android:id="@+id/recommenu_fragment_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             >

            <Button
                android:id="@+id/recommenu_fragment_searchbtn"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_weight="0.1"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_border"
                android:text="검색" />

            <Button
                android:id="@+id/recommenu_fragment_recombtn"
                android:layout_width="0dip"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.1"
                android:background="@drawable/button_border"
                android:text="추천" />
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/recommenu_exlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ExpandableListView>

</LinearLayout>