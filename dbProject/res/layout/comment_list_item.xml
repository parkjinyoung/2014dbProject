<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/snumenu_detail_comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/snumenu_detail_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/mycomment_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/comment_modify_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수정"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/comment_delete_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="삭제"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/comment_eval_stars1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxHeight="16dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/emptystar25" />

                <ImageView
                    android:id="@+id/comment_eval_stars2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxHeight="16dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/emptystar25" />

                <ImageView
                    android:id="@+id/comment_eval_stars3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxHeight="16dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/emptystar25" />

                <ImageView
                    android:id="@+id/comment_eval_stars4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxHeight="16dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/emptystar25" />

                <ImageView
                    android:id="@+id/comment_eval_stars5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:maxHeight="16dp"
                    android:maxWidth="80dp"
                    android:src="@drawable/emptystar25" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/comment_up_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추천"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_up_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <Button
                    android:id="@+id/comment_down_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안추천"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comment_down_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>