<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.9" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/detail_snu_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/detail_snu_menu_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="15sp" 
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/detail_snu_menu_eval_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/detail_snu_menu_eval_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/detail_snu_menu_eval_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/detail_snu_menu_eval_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/detail_snu_menu_eval_img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/detail_snu_menu_eval_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코멘트"
        android:textSize="20sp" >
   	</TextView>
   	    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right" >
    <Button 
        android:id="@+id/comment_sortbydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "최신"/>
    
        <Button 
        android:id="@+id/comment_sortbyrec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "공감"/>
   	
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/detail_snu_menu_comment_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         >
    </ListView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.1" >
    <Button
        android:id="@+id/detail_snu_menu_do_eval_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="나도 평가하기" >
    </Button>
</LinearLayout>
</LinearLayout>